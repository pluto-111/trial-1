{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*", "global.d.ts"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts", "server/vite.ts"],
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
